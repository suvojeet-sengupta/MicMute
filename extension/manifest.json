{
  "manifest_version": 3,
  "name": "MicMute Ozonetel Connector",
  "version": "1.0.0",
  "description": "Automatically triggers MicMute call recording when Ozonetel call is active",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://*.ozonetel.com/*",
    "http://localhost:9876/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.ozonetel.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ]
}